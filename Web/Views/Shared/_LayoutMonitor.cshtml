<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width , initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    @Html.Partial("Stylesheet")
    @Html.Partial("Scripts")

    <style>
        .header {
            background-color: #1E2225;
            position: absolute;
            top: 0px;
            height: 100px;
            z-index: 10;
            opacity: 0.4;
        }

        .content {
            background-color: #2F8CCA;
            background-image: url('images/twitter.png');
            background-repeat: no-repeat;
            background-position: center;
            background-size: 500px;
            position: absolute;
            height: 900px;
        }

        .centered {
            display: block;
            margin-left: auto;
            margin-right: auto;
            /*vertical-align: middle;*/
            margin-top: 300px
        }

        .title {
            z-index: 15;
            color: white;
            margin-top: 15px;
        }

        .logo {
            position: absolute;
            right: 0px;
            margin-top: 30px;
        }

        .tweet {
            text-align: center;
            font-size: 100px;
            color: white;
            margin-top: 300px;
        }

        .user {
            text-align: right;
            color: white;
            font-size: 50px;
            margin-top: 300px;
        }

        .profile {
            margin: 5px;
            padding: 5px;
            height: auto;
            width: auto;
            float: left;
        }

        .users {
            margin-top: 300px;
        }

        p.social {
            clear: both;
            color: white;
            font-size: 30px;
        }

        .selected {
            border: 1px solid #0000ff;
        }

    </style>

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container-fluid bg">
        <div class="row">
            <div class="col"></div>
            <div class="col-8 display-4 text-center">
            <img width="100" height="100" src="~/Content/Image/Emblem_of_Pingtung_County.png" />
            @ViewBag.Title
            </div>
            <div class="col"></div>
        </div>
        <div class="row ">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="mainBody">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>


