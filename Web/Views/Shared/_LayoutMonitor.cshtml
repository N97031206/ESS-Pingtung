<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width , initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    @Html.Partial("Stylesheet")
    @Html.Partial("Scripts")
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container-fluid bg" style="zoom:0.7">
        <div class="row" style="height:50px"></div>
            <div class="row">
                <div class="col"></div>
                <div class="col-8 display-4 text-center">
                    <img width="80" height="80" src="~/Content/Image/Emblem_of_Pingtung_County.png" />
                    @ViewBag.Title @ViewBag.Local
                </div>
                <div class="col"></div>
            </div>
            <div class="row ">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="mainBody">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
</body>
</html>


