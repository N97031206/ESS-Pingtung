@model Service.ESS.Model.Orgin
@{
    ViewBag.Title = Resources.Resource.CreateOrgin;
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}

@*<h2>@ViewBag.Title</h2>*@
<div class="container">
    @*<div class="h3 text-right">
        @Html.ActionLink("回到維護管理", "Maintain")
    </div>*@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Orgin</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.OrginName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrginName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrginName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>




