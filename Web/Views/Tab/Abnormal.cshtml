@using PagedList;
@using PagedList.Mvc;
@using Service.ESS.Provider;

@model IPagedList<Service.ESS.Model.Alart>
@{
    ViewBag.Title = Resources.Resource.Abnormal;

    StationService stationService = new StationService();
    AlartTypeService alarttyprService = new AlartTypeService();
    string alarttypeID = ViewBag.alarttypeID;
    string stationID = ViewBag.stationID;
    string datarange = ViewBag.datarange;
    string start = ViewBag.RangeStart;
    string end = ViewBag.RangeEnd;
    int StationNum = ViewBag.StationNum == null ? 2 : ViewBag.StationNum;
    Layout = StationNum == 6 ? "~/Views/Shared/_LayoutJiasing.cshtml" : "~/Views/Shared/_LayoutTab.cshtml";
}
@Html.Partial("DataPicket")
<br />
<div class="container">
    <div class="row">
        <div class="col text-left">
            @using (Html.BeginForm("Abnormal", "Tab", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col h5">
                        <div class="daterange ">
                            @Html.DropDownList("Statons", (IEnumerable<SelectListItem>)ViewBag.station, new { @style = "display:none" })
                            <label>時間區間</label>
                            <input class="col-4 " name="range_date" type="text">
                            @Html.Label("異常設備")
                            @Html.DropDownList("AlartTypes", (IEnumerable<SelectListItem>)ViewBag.alartType)
                            <i class="fa fa-calendar"></i>
                            <button type="submit" class="btn btn-success  btn-sm" id="btnBulletin" style="vertical-align:top">查詢</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col" style="width:25%">站點名稱</th>
                        <th scope="col" style="width:20%">異常啟始時間</th>
                        <th scope="col" style="width:15%">異常設備</th>
                        <th scope="col" style="width:40%">異常描述</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var alart in Model)
                    {
                        <tr>
                            <th scope="row">@stationService.ReadID(alart.StationID).StationName.ToString()</th>
                            <td>@alart.StartTimet</td>
                            <td>@alarttyprService.ReadID(alart.AlartTypeID).AlartTypeName.ToString()</td>
                            <td>@alart.AlartContext</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>@Html.PagedListPager(Model, Page => Url.Action("Abnormal", new { datarange,alarttypeID, stationID,Page }))</div>
        </div>
    </div>
</div>








