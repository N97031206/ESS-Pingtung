<style>
    .line {
        width: auto;
        height: auto;
        border-bottom: 1px solid black;
    }
</style>

<div class="row">
    <!--lift-->
    <div class="col-2 h6">
        <div class="row " id="pc0">
            <div class="col font-weight-bold ">資料時間:@ViewBag.EssTime</div>
            <div class="w-100 line"></div>
            <div class="col font-weight-bold">@ViewBag.InvInfo1</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">工作模式</div>
            <div class="col font-italic">@ViewBag.InvInfo2</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">市電電壓  (V)</div>
            <div class="col font-italic">@ViewBag.InvInfo3</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">市電頻率  (Hz)</div>
            <div class="col font-italic">@ViewBag.InvInfo4</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">輸出電壓  (V)</div>
            <div class="col font-italic">@ViewBag.InvInfo5</div>
            <div class="w-100"></div>
            <div class="col  font-weight-bold small">輸出頻率  (Hz)</div>
            <div class="col font-italic">@ViewBag.InvInfo6</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">總輸出實功率(kW)</div>
            <div class="col font-italic">@ViewBag.InvInfo7</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">電池電壓  (V)</div>
            <div class="col font-italic">@ViewBag.InvInfo8</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">電池容量  (%)</div>
            <div class="col font-italic">@ViewBag.InvInfo9</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">太陽能電壓  (V)</div>
            <div class="col font-italic">@ViewBag.InvInfo10</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">總充電電流  (A)</div>
            <div class="col font-italic">@ViewBag.InvInfo11</div>
        </div>
    </div>
    <!--middle-->
    <div class="col-8">
        <div id="InverterChart" style="height:500px">
            <script type="text/javascript">
                var dom = document.getElementById("InverterChart");
                var InverterChart = echarts.init(dom);
                //時間兩位
                function paddingLeft(str, lenght) {
                    if (str.length >= lenght)
                        return str;
                    else
                        return paddingLeft("0" + str, lenght);
                }
                //X軸座標
                var xData = [];
                var h=0;
                var m =0;
                for (var i = 0; i < 24; i++) {
                    for (var j = 0; j < 60; j = j + 15) {
                        var hh = i;
                        var mm = j;
                        if (h == 0) {
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                        }
                        if (h > 0) {
                            hh = i + h;
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                            if (hh >= 24) {
                                hh = hh - 24;
                            }
                        }
                        xData.push( paddingLeft(hh.toString(), 2) + ":" + paddingLeft(mm.toString(), 2));
                    }
                }
                //Y軸座標
                 var InverterData = [];
                InverterData.push(@TempData["InverterData"]);
                option = null;
                option = {
                    title: {
                        text: '總輸出實功率',
                        textStyle: {
                            fontWeight: 'normal',
                            color: 'white'
                        },
                        x: "center"
                    },
                    tooltip: {
                        trigger: 'axis',
                        show: true
                    },
                    grid: {
                        left: '2%',
                        right: '4%',
                        bottom: '1%',
                        containLabel: true
                    },
                    toolbox: {
                        feature: {
                            saveAsImage: {
                                title: '圖檔'
                            }
                        }
                    },
                    xAxis: [
                        {
                            name: '時間',
                            type: 'category',
                            boundaryGap: false,
                            data: xData,
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        },
                    ],
                    yAxis: [
                        {
                            name: '總輸出實功率(kW)',
                            type: 'value',
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        }
                    ],
                    series: [
                        {
                            "name": "總輸出實功率",
                            "type": "line",
                            "data": InverterData,
                            areaStyle: {}
                        }
                    ]
                };
                if (option && typeof option === "object") {
                    InverterChart.setOption(option, true);
                }
            </script>
        </div>
    </div>
    <!--right-->
    <div class="col-2 h3">
        <div class=" bg-light">可用總電量</div>
        <div class="font-italic">@ViewBag.Demand </div>
        <div class="bg-light">可用電時數</div>
        <div class="font-italic">@ViewBag.RemainTime</div>
    </div>
</div>





