@using Service.ESS.Provider;
@using Service.ESS.Model;
@{
    //取最新時間
    ESSObjecterService eSSObjecterService = new ESSObjecterService();
    string EssTime = eSSObjecterService.ReadNow().CreateTime.ToString();
    //取相關資料
    InverterService InverterService = new InverterService();
    List<Inverter> inverters = new List<Inverter>();
    var ReadNow = eSSObjecterService.ReadNow().InvertersIDs;
    var invID = ReadNow.Split('|');
    if (ReadNow != null)
    {
        foreach (var x in invID)
        {
            if (!string.IsNullOrEmpty(x))
            {
                Guid id = Guid.Parse(x.Trim());
                inverters.Add(InverterService.ReadByID(id));
            }
        }
    }
}

<style>
    .line {
        width: auto;
        height: auto;
        border-bottom: 1px solid black;
    }
</style>

<div class="row">
    <!--lift-->
    <div class="col-2 h6">
        @if (inverters != null)
        {
            <div class="row " id="pc0">
                <div class="col font-weight-bold small">資料時間(UTC+8)</div>
                <div class="col font-italic">@EssTime</div>
                @foreach (var inv in inverters)
                {
                    string Info1 = inv.index.ToString();
                    string Info2 = inv.DeviceMode.Trim();
                    if (Info2 == "P") { Info2 = "Power On Mode"; }
                    else if (Info2 == "S") { Info2 = "Standby Mode"; }
                    else if (Info2 == "L") { Info2 = "Line Mode"; }
                    else if (Info2 == "B") { Info2 = "Battery Mode"; }
                    else if (Info2 == "F") { Info2 = "Fault Mode"; }
                    else if (Info2 == "H") { Info2 = "Power Saving Mode"; }
                    else { Info2 = "Unknown Mode"; }
                    string Info3 = string.Format("{0:#,0.00}", inv.GridVoltage);
                    string Info4 = string.Format("{0:#,0.00}", inv.GridFrequency);
                    string Info5 = string.Format("{0:#,0.00}", inv.AC_OutputVoltage);
                    string Info6 = string.Format("{0:#,0.00}", inv.AC_OutputFrequency);
                    string Info7 = string.Format("{0:#,0.00}", inv.ParallelInformation_TotalOutputActivePower.Split('|').ToList().Sum(x => x.IsEmpty() ? 0 : Convert.ToDouble(x)) / 1000.0);
                    string Info8 = string.Format("{0:#,0.00}", inv.BatteryVoltage);
                    string Info9 = string.Format("{0:#,0.00}", inv.BatteryCapacity);
                    string Info10 = string.Format("{0:#,0.00}", inv.PV_InputVoltage);
                    string Info11 = string.Format("{0:#,0.00}", inv.ParallelInformation_TotalChargingCurrent.Split('|').ToList().Sum(x => x.IsEmpty() ? 0 : Convert.ToDouble(x)) / 1000.0);
                    <div class="w-100 line"></div>
                    <div class="col font-weight-bold small">逆變器</div>
                    <div class="col font-italic">@Info1</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">工作模式</div>
                    <div class="col font-italic">@Info2</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">市電電壓  (V)</div>
                    <div class="col font-italic">@Info3</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">市電頻率  (Hz)</div>
                    <div class="col font-italic">@Info4</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">輸出電壓  (V)</div>
                    <div class="col font-italic">@Info5</div>
                    <div class="w-100"></div>
                    <div class="col  font-weight-bold small">輸出頻率  (Hz)</div>
                    <div class="col font-italic">@Info6</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">總輸出實功率(kW)</div>
                    <div class="col font-italic">@Info7</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">電池電壓  (V)</div>
                    <div class="col font-italic">@Info8</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">電池容量  (%)</div>
                    <div class="col font-italic">@Info9</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">太陽能電壓  (V)</div>
                    <div class="col font-italic">@Info10</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">總充電電流  (A)</div>
                    <div class="col font-italic">@Info11</div>
                }
            </div>
        }
    </div>
    <!--middle-->
    <div class="col-8">
        <div id="InverterChart" style="height:500px">
            <script type="text/javascript">
                var dom = document.getElementById("InverterChart");
                var InverterChart = echarts.init(dom);
                //時間兩位
                function paddingLeft(str, lenght) {
                    if (str.length >= lenght)
                        return str;
                    else
                        return paddingLeft("0" + str, lenght);
                }
                //X軸座標
                var xData = [];
                var h =@TempData["Inverterhh"] ;
                var m =@TempData["Invertermm"] ;
                for (var i = 0; i < 24; i++) {
                    for (var j = 0; j < 60; j = j + 15) {
                        var hh = i;
                        var mm = j;
                        if (h == 0) {
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                        }
                        if (h > 0) {
                            hh = i + h;
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                            if (hh >= 24) {
                                hh = hh - 24;
                            }
                        }
                        xData.push("'" + paddingLeft(hh.toString(), 2) + "時" + paddingLeft(mm.toString(), 2) + "分'");
                    }
                }
                //Y軸座標
                 var InverterData = [];
                InverterData.push(@TempData["InverterData"]);
                option = null;
                option = {
                    title: {
                        text: '總輸出實功率',
                        textStyle: {
                            fontWeight: 'normal',
                            color: 'white'
                        },
                        x: "center"
                    },
                    tooltip: {
                        show: true
                    },
                    xAxis: [
                        {
                            name: '時間軸',
                            type: 'category',
                            data: xData,
                            axisLine: {
                                lineStyle: {
                                    color: 'white',
                                    width: 10
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        },
                    ],
                    yAxis: [
                        {
                            name: '用電單位',
                            type: 'value',
                            axisLine: {
                                lineStyle: {
                                    color: 'white',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value} kW'
                            }
                        }
                    ],
                    series: [
                        {
                            "name": "總輸出實功率",
                            "type": "line",
                            "data": InverterData,
                        }
                    ]
                };
                if (option && typeof option === "object") {
                    InverterChart.setOption(option, true);
                }
            </script>
        </div>
    </div>
    <!--right-->
    <div class="col-2 h3">
        <div class=" bg-light">可用總電量</div>
        <div class="font-italic">@ViewBag.Demand </div>
        <div class="bg-light">可用電時數</div>
        <div class="font-italic">@ViewBag.RemainTime</div>
    </div>
</div>





