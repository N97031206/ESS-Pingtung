
<style>
    .line {
        width: auto;
        height: auto;
        border-bottom: 1px solid black;
    }
</style>

<div class="row">
    <!--lift-->
    <div class="col-2 h6">
        <div class="row " id="pc0">
            <div class="col font-weight-bold ">資料時間:@ViewBag.EssTime</div>
            <div class="w-100 line"></div>
            <div class="col font-weight-bold ">@ViewBag.LoadInfo1</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">電壓(V)</div>
            <div class="col font-italic">@ViewBag.LoadInfo2</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">電流(A)</div>
            <div class="col font-italic">@ViewBag.LoadInfo3</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">實功率(kW)</div>
            <div class="col font-italic">@ViewBag.LoadInfo4</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">虛功率(kVAR)</div>
            <div class="col font-italic">@ViewBag.LoadInfo5</div>
            <div class="w-100"></div>
            <div class="col  font-weight-bold small">視在功率(kVA)</div>
            <div class="col font-italic">@ViewBag.LoadInfo6</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">功率因數(PF)</div>
            <div class="col font-italic">@ViewBag.LoadInfo7</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">頻率(Hz)</div>
            <div class="col font-italic">@ViewBag.LoadInfo8</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">當日用電量(度)</div>
            <div class="col font-italic">@ViewBag.LoadInfo9</div>
        </div>
    </div>
    <!--middle-->
    <div class="col-8">
        <div id="LoadChart" style="height:500px">
            <script type="text/javascript">
                var dom = document.getElementById("LoadChart");
            var LoadChart = echarts.init(dom);
            //時間兩位
            function paddingLeft(str, lenght) {
                if (str.length >= lenght)
                    return str;
                else
                    return paddingLeft("0" + str, lenght);
            }
            //X軸座標
                var xData = [];
                var h=0;
                var m =0;
                for (var i = 0; i < 24; i++) {
                    for (var j = 0; j < 60; j = j + 15) {
                        var hh = i;
                        var mm = j;
                        if (h == 0) {
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                        }
                        if (h > 0) {
                            hh = i + h;
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                            if (hh >= 24) {
                                hh = hh - 24;
                            }
                        }
                        xData.push(paddingLeft(hh.toString(), 2) + ":" + paddingLeft(mm.toString(), 2));
                    }
                }
            //Y軸座標
                var Load1 = [];
                Load1.push(@TempData["Load1"]);
                option = null;
                option = {
                    title: {
                        text: '負載用電瓦數',
                        textStyle: {
                            fontWeight: 'normal',
                            color: 'white'
                        },
                        x: "left"
                    },
                    tooltip: {
                        trigger: 'axis',
                        show: true
                    },
                    grid: {
                        left: '2%',
                        right: '4%',
                        bottom: '1%',
                        containLabel: true
                    },
                    legend: {
                        data: ['負載迴路']
                    },
                    toolbox: {
                        show: true,
                        feature: {
                            mark: { show: true },
                            dataView: { show: true, readOnly: false, title: '資料' },
                            magicType: { show: true, type: ['line', 'bar'], title: '圖格式' },
                            restore: { show: true, title: '復原' },
                            saveAsImage: { show: true, title: '圖檔' }
                        }
                    },
                    xAxis: [
                        {
                            name: '時間',
                            type: 'category',
                            boundaryGap: false,
                            data: xData,
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        },
                    ],
                    yAxis: [
                        {
                            name: '度',
                            type: 'value',
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        }
                    ],
                    series: [
                        {
                            "name": "負載迴路",
                            "type": "line",
                            "data": Load1,
                            "areaStyle": {}
                        }
                    ]
                };
                if (option && typeof option === "object") {
                    LoadChart.setOption(option, true);
                }
            </script>
        </div>
    </div>
    <!--right-->
    <div class="col-2 h3">
        <div class=" bg-light">可用總電量</div>
        <div class="font-italic">@ViewBag.Demand</div>
        <div class="bg-light">可用電時數</div>
        <div class="font-italic">@ViewBag.RemainTime</div>
    </div>
</div>





