@using Service.ESS.Provider;
@using Service.ESS.Model;
@{
    //取最新時間
    ESSObjecterService eSSObjecterService = new ESSObjecterService();
    string EssTime = eSSObjecterService.ReadNow().CreateTime.ToString();
    //取相關資料
    int i = 0;
    LoadPowerService LoadPowerService = new LoadPowerService();
    List<LoadPower> loadPowers = new List<LoadPower>();
    var ReadNow = eSSObjecterService.ReadNow().LoadPowerIDs;
    var totalkWHt = eSSObjecterService.ReadTodayLoadkWHt();
    if (ReadNow != null)
    {
        var LoadID = ReadNow.Split('|');
        foreach (var x in LoadID)
        {
            if (!string.IsNullOrEmpty(x))
            {
                Guid id = Guid.Parse(x.Trim());
                loadPowers.Add(LoadPowerService.ReadByID(id));
            }
        }
    } 
    }

<style>
    .line {
        width: auto;
        height: auto;
        border-bottom: 1px solid black;
    }
</style>

<div class="row">
    <!--lift-->
    <div class="col-2 h6">
        @if (loadPowers != null)
        {
        <div class="row " id="pc0">
            <div class="col font-weight-bold ">資料時間:@EssTime</div>
            @*<div class="col font-italic"></div>*@
            @foreach (var lo in loadPowers)
            {
                string Info1 = lo.name;
                string Info2 = string.Format("{0:#,0.00}", lo.Vavg);
                string Info3 = string.Format("{0:#,0.00}", lo.Isum);
                string Info4 = string.Format("{0:#,0.00}", lo.Watt_t / 1000.0);
                string Info5 = string.Format("{0:#,0.00}", lo.Var_t / 1000.00);
                string Info6 = string.Format("{0:#,0.00}", lo.VA_t / 1000.0);
                string Info7 = string.Format("{0:#,0.00}", lo.PF_t);
                string Info8 = string.Format("{0:#,0.00}", lo.Frequency);
                string Info9 = string.Format("{0:#,0.00}", totalkWHt[i]);
                i++;
                <div class="w-100 line"></div>
                <div class="col font-weight-bold ">@Info1</div>
                @*<div class="col font-italic"></div>*@
                <div class="w-100"></div>
                <div class="col font-weight-bold small">電壓(V)</div>
                <div class="col font-italic">@Info2</div>
                <div class="w-100"></div>
                <div class="col font-weight-bold small">電流(A)</div>
                <div class="col font-italic">@Info3</div>
                <div class="w-100"></div>
                <div class="col font-weight-bold small">實功率(kW)</div>
                <div class="col font-italic">@Info4</div>
                <div class="w-100"></div>
                <div class="col font-weight-bold small">虛功率(kVAR)</div>
                <div class="col font-italic">@Info5</div>
                <div class="w-100"></div>
                <div class="col  font-weight-bold small">視在功率(kVA)</div>
                <div class="col font-italic">@Info6</div>
                <div class="w-100"></div>
                <div class="col font-weight-bold small">功率因數(PF)</div>
                <div class="col font-italic">@Info7</div>
                <div class="w-100"></div>
                <div class="col font-weight-bold small">頻率(Hz)</div>
                <div class="col font-italic">@Info8</div>
                <div class="w-100"></div>
                <div class="col font-weight-bold small">當日用電量(度)</div>
                <div class="col font-italic">@Info9</div>
            }
        </div>
        }
    </div>
    <!--middle-->
    <div class="col-8">
        <div id="LoadChart" style="height:500px">
            <script type="text/javascript">
                var dom = document.getElementById("LoadChart");
            var LoadChart = echarts.init(dom);
            //時間兩位
            function paddingLeft(str, lenght) {
                if (str.length >= lenght)
                    return str;
                else
                    return paddingLeft("0" + str, lenght);
            }
            //X軸座標
                var xData = [];
                var h =@TempData["Loadhh"] ;
                var m =@TempData["Loadmm"] ;
                for (var i = 0; i < 24; i++) {
                    for (var j = 0; j < 60; j = j + 15) {
                        var hh = i;
                        var mm = j;
                        if (h == 0) {
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                        }
                        if (h > 0) {
                            hh = i + h;
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                            if (hh >= 24) {
                                hh = hh - 24;
                            }
                        }
                        xData.push(paddingLeft(hh.toString(), 2) + ":" + paddingLeft(mm.toString(), 2));
                    }
                }
            //Y軸座標
                var Load1 = [];
                var Load2 = [];
                Load1.push(@TempData["Load1"]);
                Load2.push(@TempData["Load2"]);
                option = null;
                option = {
                    title: {
                        text: '負載用電瓦數',
                        textStyle: {
                            fontWeight: 'normal',
                            color: 'white'
                        },
                        x: "left"
                    },
                    tooltip: {
                        trigger: 'axis',
                        show: true
                    },
                    grid: {
                        left: '2%',
                        right: '4%',
                        bottom: '1%',
                        containLabel: true
                    },
                    legend: {
                        data: ['負載迴路1', '負載迴路2']
                    },    
                    toolbox: {
                        feature: {
                            saveAsImage: {
                                title: '圖檔'
                            }
                        }
                    },
                    xAxis: [
                        {
                            name: '時間',
                            type: 'category',
                            data: xData,
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        },
                    ],
                    yAxis: [
                        {
                            name: '度',
                            type: 'value',
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        }
                    ],
                    series: [
                        {
                            "name": "負載迴路1",
                            "type": "line",
                            "data": Load1,
                            stack: '累加',
                            areaStyle: {}
                        },
                        {
                            "name": "負載迴路2",
                            "type": "line",
                            "data": Load2,
                            stack: '累加',
                            areaStyle: {}
                        }
                    ]
                };
                if (option && typeof option === "object") {
                    LoadChart.setOption(option, true);
                }
            </script>
        </div>
    </div>
    <!--right-->
    <div class="col-2 h3">
        <div class=" bg-light">可用總電量</div>
        <div class="font-italic">@ViewBag.Demand</div>
        <div class="bg-light">可用電時數</div>
        <div class="font-italic">@ViewBag.RemainTime</div>
    </div>
</div>





