@using Service.ESS.Provider;
@using Service.ESS.Model;
@{
    //取最新時間
    ESSObjecterService eSSObjecterService = new ESSObjecterService();
    string EssTime = eSSObjecterService.ReadNow().CreateTime.ToString();
    //取相關資料

    GeneratorService GeneratorService = new GeneratorService();
    List<Generator> generators = new List<Generator>();
    var ReadNow = eSSObjecterService.ReadNow().GeneratorIDs;
    if (ReadNow != null)
    {
        var generID = ReadNow.Split('|');
        foreach (var x in generID)
        {
            if (!string.IsNullOrEmpty(x))
            {
                Guid id = Guid.Parse(x.Trim());
                generators.Add(GeneratorService.ReadByID(id));
            }
        }
    }
}

<div class="row">
    <!--lift-->
    <div class="col-2 h6">
        @if (generators != null)
        {
            <div class="row " id="pc0">
                <div class="col font-weight-bold small">資料時間(UTC+8)</div>
                <div class="col font-italic">@EssTime</div>
                @foreach (var gen in generators)
                {
                    string Info1 = gen.index.ToString();
                    string Info2 = string.Format("{0:#,0.00}", gen.FuleLevel);
                    string Info3 = string.Format("{0:#,0.00}", gen.L1Nvoltage);
                    string Info4 = string.Format("{0:#,0.00}", gen.L2Nvoltage);
                    string Info5 = string.Format("{0:#,0.00}", gen.L3Nvoltage);
                    string Info6 = string.Format("{0:#,0.00}", gen.L1current);
                    string Info7 = string.Format("{0:#,0.00}", gen.L2current);
                    string Info8 = string.Format("{0:#,0.00}", gen.L3current);
                    string Info9 = string.Format("{0:#,0.00}", gen.totalwatts / 1000);
                    string Info10 = string.Format("{0:#,0.00}", gen.averagepowerfactor);
                    string Info11 = string.Format("{0:#,0.00}", gen.positiveKWhours);
                    string Info12 = string.Format("{0:#,0.00}", gen.negativeKWhours);
                    string Info13 = gen.ControlStatus.Equals("true") ? "已啟動" : "關閉中";
                    string Info14 = string.Format("{0:#,0.00}", gen.AvailabilityEnergy);
                    string Info15 = string.Format("{0:#,0.00}", gen.AvailabilityHour);
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">發電機</div>
                    <div class="col font-italic">@Info1</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">發電機油位 (%)</div>
                    <div class="col font-italic">@Info2</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">L1-N相電壓(V)</div>
                    <div class="col font-italic">@Info3</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">L2-N相電壓(V)</div>
                    <div class="col font-italic">@Info4</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">L3-N相電壓 (V)</div>
                    <div class="col font-italic">@Info5</div>
                    <div class="w-100"></div>
                    <div class="col  font-weight-bold small">L1相電流(A)</div>
                    <div class="col font-italic">@Info6</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">L2相電流(A)</div>
                    <div class="col font-italic">@Info7</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">L3相電流(A)</div>
                    <div class="col font-italic">@Info8</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">總實功率(kW)</div>
                    <div class="col font-italic">@Info9</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">平均功率因數</div>
                    <div class="col font-italic">@Info10</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">正的千瓦時(kWh)</div>
                    <div class="col font-italic">@Info11</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">負的千瓦時(kWh)</div>
                    <div class="col font-italic">@Info12</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">發電機狀態</div>
                    <div class="col font-italic">@Info13</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">可用總電量(kWh)</div>
                    <div class="col font-italic">@Info14</div>
                    <div class="w-100"></div>
                    <div class="col font-weight-bold small">可用電時數(H)</div>
                    <div class="col font-italic">@Info15</div>
                }
            </div>
        }
    </div>
    <!--middle-->
    <div class="col-8">
        <div id="GeneratorChart" style="height:500px">
            <script type="text/javascript">

                var dom = document.getElementById("GeneratorChart");
                var GeneratorChart = echarts.init(dom);
                //時間兩位
                function paddingLeft(str, lenght) {
                    if (str.length >= lenght)
                        return str;
                    else
                        return paddingLeft("0" + str, lenght);
                }

                //X軸座標
                var xData = [];
                var h =@TempData["Generatorhh"] ;
                var m =@TempData["Generatormm"] ;
                for (var i = 0; i < 24; i++) {
                    for (var j = 0; j < 60; j = j + 15) {
                        var hh = i;
                        var mm = j;
                        if (h == 0) {
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                        }
                        if (h > 0) {
                            hh = i + h;
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                            if (hh >= 24) {
                                hh = hh - 24;
                            }
                        }
                        xData.push("'" + paddingLeft(hh.toString(), 2) + "時" + paddingLeft(mm.toString(), 2) + "分'");
                    }
                }
                //Y軸座標
                 var GeneratorData = [];
                GeneratorData.push(@TempData["GeneratorData"] );
                option = null;
                option = {
                    title: {
                        text: '每日用電瓦數',
                        textStyle: {
                            fontWeight: 'normal',
                            color: 'white'
                        },
                        x: "center"
                    },
                    tooltip: {
                        show: true
                    },
                    xAxis: [
                        {
                            name: '時間軸',
                            type: 'category',
                            data: xData,
                            axisLine: {
                                lineStyle: {
                                    color: 'white',
                                    width: 10
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        },
                    ],
                    yAxis: [
                        {
                            name: '用電單位',
                            type: 'value',
                            axisLine: {
                                lineStyle: {
                                    color: 'white',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value} kWh'
                            }
                        }
                    ],
                    series: [
                        {
                            "name": "每日用電瓦數",
                            "type": "line",
                            "data": GeneratorData,
                        }
                    ]
                };
                if (option && typeof option === "object") {
                    GeneratorChart.setOption(option, true);
                }
            </script>
        </div>
    </div>
    <!--right-->
    <div class="col-2 h3">
        <div class=" bg-light">可用總電量</div>
        <div class="font-italic">@ViewBag.Demand</div>
        <div class="bg-light">可用電時數</div>
        <div class="font-italic">@ViewBag.RemainTime</div>
    </div>
</div>







