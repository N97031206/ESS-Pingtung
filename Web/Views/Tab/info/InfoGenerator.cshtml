@using Service.ESS.Provider;
@using Service.ESS.Model;
@{
    GeneratorService GeneratorService = new GeneratorService();
    Generator generator = GeneratorService.ReadNow();
    string Info1 = "", Info2 = "", Info3 = "", Info4 = "", Info5 = "", Info6 = "", Info7 = "", Info8 = "",
        Info9 = "", Info10 = "", Info11 = "", Info12 = "", Info13 = "", Info14 = "", Info15 = "";

    if (generator != null)
    {
        Info1 = generator.UpdateTime.AddHours(8).ToString();
        Info2 = string.Format("{0:#,0.00}", generator.FuleLevel);
        Info3 = string.Format("{0:#,0.00}", generator.L1Nvoltage);
        Info4 = string.Format("{0:#,0.00}", generator.L2Nvoltage);
        Info5 = string.Format("{0:#,0.00}", generator.L3Nvoltage);
        Info6 = string.Format("{0:#,0.00}", generator.L1current);
        Info7 = string.Format("{0:#,0.00}", generator.L2current);
        Info8 = string.Format("{0:#,0.00}", generator.L3current);
        Info9 = string.Format("{0:#,0.00}", generator.totalwatts / 1000);
        Info10 = string.Format("{0:#,0.00}", generator.averagepowerfactor);
        Info11 = string.Format("{0:#,0.00}", generator.positiveKWhours);
        Info12 = string.Format("{0:#,0.00}", generator.negativeKWhours);
        Info13 = generator.ControlStatus.Equals("true")? "已啟動" : "關閉中";
        Info14 = string.Format("{0:#,0.00}", generator.AvailabilityEnergy);
        Info15 = string.Format("{0:#,0.00}", generator.AvailabilityHour);
    }
}
<div class="row">
    <!--lift-->
    <div class="col-2 h6">
        <div class="row " id="pc0">
            <div class="col font-weight-bold small">資料時間(UTC+8)</div>
            <div class="col font-italic">@Info1</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">發電機油位 (%)</div>
            <div class="col font-italic">@Info2</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">L1-N相電壓(V)</div>
            <div class="col font-italic">@Info3</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">L2-N相電壓(V)</div>
            <div class="col font-italic">@Info4</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">L3-N相電壓 (V)</div>
            <div class="col font-italic">@Info5</div>
            <div class="w-100"></div>
            <div class="col  font-weight-bold small">L1相電流(A)</div>
            <div class="col font-italic">@Info6</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">L2相電流(A)</div>
            <div class="col font-italic">@Info7</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">L3相電流(A)</div>
            <div class="col font-italic">@Info8</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">總實功率(kW)</div>
            <div class="col font-italic">@Info9</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">平均功率因數</div>
            <div class="col font-italic">@Info10</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">正的千瓦時(kWh)</div>
            <div class="col font-italic">@Info11</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">負的千瓦時(kWh)</div>
            <div class="col font-italic">@Info12</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">發電機狀態</div>
            <div class="col font-italic">@Info13</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">可用總電量(kWh)</div>
            <div class="col font-italic">@Info14</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">可用電時數(H)</div>
            <div class="col font-italic">@Info15</div>
        </div>
      
    </div>
    <!--middle-->
    <div class="col-8">
        <div id="GeneratorChart" style="height:500px">
            <script type="text/javascript">           
                var dom = document.getElementById("GeneratorChart");
                var GeneratorChart = echarts.init(dom);
                //時間兩位
                function paddingLeft(str, lenght) {
                    if (str.length >= lenght)
                        return str;
                    else
                        return paddingLeft("0" + str, lenght);
                }

                //X軸座標
                var xData = [];
                var h =@TempData["Generatormm"] ;
                var m =@TempData["Generatorhh"] ;
                for (var i = 0; i < 24; i++) {
                    for (var j = 0; j < 60; j = j + 15) {
                        var hh = i;
                        var mm = j;
                        if (h == 0) {
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                        }
                        if (h > 0) {
                            hh = i + h;
                            if (m > 0) {
                                mm = j + m;
                                if (mm >= 60) {
                                    mm = mm - 60;
                                    hh = hh + 1;
                                }
                            }
                            if (hh >= 24) {
                                hh = hh - 24;
                            }
                        }
                        xData.push("'" + paddingLeft(hh.toString(), 2) + "時" + paddingLeft(mm.toString(), 2) + "分'");
                    }
                }
                //Y軸座標
                 var GeneratorData = [];
                GeneratorData.push(@TempData["GeneratorData"] );
                option = null;
                option = {
                    title: {
                        text: '每日用電瓦數',
                        textStyle: {
                            fontWeight: 'normal',
                            color: 'white'
                        },
                        x: "center"
                    },
                    tooltip: {
                        show: true
                    },
                    xAxis: [
                        {
                            name: '時間軸',
                            type: 'category',
                            data: xData,
                            axisLine: {
                                lineStyle: {
                                    color: 'white',
                                    width: 10
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        },
                    ],
                    yAxis: [
                        {
                            name: '用電單位',
                            type: 'value',
                            axisLine: {
                                lineStyle: {
                                    color: 'white',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value} kWh'
                            }
                        }
                    ],
                    series: [
                        {
                            "name": "每日用電瓦數",
                            "type": "bar",
                            "data": GeneratorData,
                        }
                    ]
                };
                if (option && typeof option === "object") {
                    GeneratorChart.setOption(option, true);
                }
            </script>
        </div>
    </div>
    <!--right-->
    <div class="col-2 h3">
        <div class=" bg-light">可用總電量</div>
        <div class="font-italic">@ViewBag.Demand  kWh</div>
        <div class="bg-light">可用電時數</div>
        <div class="font-italic">@ViewBag.RemainTime 小時</div>
    </div>
</div>






