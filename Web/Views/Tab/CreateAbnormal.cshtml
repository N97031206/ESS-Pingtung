@model Service.ESS.Model.Alart

@{
    ViewBag.Title = "新增異常";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}

<h2>@ViewBag.Title</h2>
<div class="container">
    <div class="h3 text-right">
        @Html.ActionLink("回到維護管理", "Maintain")
    </div>
    <h4>@ViewBag.Title</h4>
    <hr />
    <div class=" text-left">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.StationID, "站點編號", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownList("StationID", (IEnumerable<SelectListItem>)ViewBag.station, htmlAttributes: new { @class = "form - control" })
                        @Html.ValidationMessageFor(model => model.StationID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AlartTypeID, "異常分類", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownList("AlartTypeID", (IEnumerable<SelectListItem>)ViewBag.alartType, htmlAttributes: new { @class = "form - control" })
                        @Html.ValidationMessageFor(model => model.AlartTypeID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AlartContext, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.AlartContext, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AlartContext, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>

</div>
