@model Service.ESS.Model.Bulletin
@{
    ViewBag.Title = "DeleteBulletin";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}

<div class="container">
    <br />
    <div class="card col-2">
        <h class="card-header">是否刪除</h>
        <div class="card-body text-left">
            @using (Html.BeginForm("DeleteBulletin", "Tab", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label" })
                        <div class="col">
                            @Html.LabelFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-6">
                            <input type="submit" value="刪除公佈" class="btn btn-default btn-lg" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
