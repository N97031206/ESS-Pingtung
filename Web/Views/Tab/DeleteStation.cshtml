@model Service.ESS.Model.Station

@{
    ViewBag.Title = "刪除站點";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}

<div class="container">
    <div class="card col-2">
        <h class="card-header">是否刪除</h>
        <dt>
            @Html.DisplayNameFor(model => model.StationCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StationCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StationName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StationName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UUID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UUID)
        </dd>

        @using (Html.BeginForm("DeleteStation", "Tab", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <input type="submit" value="刪除站別" class="btn btn-default btn-lg" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>



