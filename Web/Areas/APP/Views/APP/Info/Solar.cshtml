<style type="text/css">
    .pz {
        margin: auto;
        vertical-align: middle;
        text-align: center;
        padding-top: 0px;
        padding-bottom: 0px;
        padding-left: 0px;
        padding-right: 0px;
    }
</style>

<div class="row pz">
    <div class="col h3 pz">@ViewBag.solarInfoLogo </div>
</div>
<div style="height:1vh"></div>
<div class="row h6 pz">
    <div class="col font-weight-bold pz">資料時間:@ViewBag.EssTime </div>
</div>
<div style="height:1vh"></div>

<div class="row"  id="APPBatteryRow">
    <div class="col ">
        <div class="row " id="AppSolarData">
            <div class="w-100"></div>
            <div class="col font-weight-bold small">電壓(V)</div>
            <div class="col ">@ViewBag.solarInfo12</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">電流(A)</div>
            <div class="col ">@ViewBag.solarInfo13</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">功率(kW)</div>
            <div class="col ">@ViewBag.solarInfo14</div>
            <div class="w-100"></div>
            <div class="col font-weight-bold small">當日發電量(度)</div>
            <div class="col ">@ViewBag.solarInfo15</div>       
        </div>
    </div>
</div>
<div class="row">
    <div class="col text-center ChartSize" id="mainSolar">
    </div>
</div>

<script type="text/javascript">
    var dom = document.getElementById("mainSolar");
            var SolarChart = echarts.init(dom);
            //時間兩位
            function paddingLeft(str, lenght) {
                if (str.length >= lenght)
                    return str;
                else
                    return paddingLeft("0" + str, lenght);
            }
            //X軸座標
                var xData = [];
                var h =@ViewBag.SolarHour;
                    for (var i = 0; i < 24; i++) {
                        if (h > 0) {
                            var hh = i + h;
                            if (hh >= 24) { hh = hh - 24; }
                            xData.push(paddingLeft(hh.toString(), 2) + "時");
                        }
                    }
            //Y軸座標
                var sun0 = [];
                var sun1 = [];
                sun0.push(@ViewBag.Sun0);
                sun1.push(@ViewBag.Sun1 );
                option = null;
                option = {
                    title: {
                        text: '太陽能',
                        textStyle: {
                            fontWeight: 'small',
                            color: 'block'
                        },
                        x: "left"
                    },
                    tooltip: {
                        trigger: 'axis',
                        show: true
                    },
                    grid: {
                        left: '2%',
                        right: '4%',
                        bottom: '1%',
                        containLabel: true
                    },
                    legend: {
                        data: ['太陽能發電功率']
                    },
                    xAxis: [
                        {
                            name: '時間',
                            type: 'category',
                            boundaryGap: false,
                            data: xData,
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        },
                    ],
                    yAxis: [
                        {
                            name: 'kW',
                            type: 'value',
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        }
                    ],
                    series: [
                        {
                            name: "太陽能發電功率",
                            type: "line",
                            data: sun0,
                            stack: '累加',
                            areaStyle: {}
                        }
                    ]
                };
                if (option && typeof option === "object") {
                    SolarChart.setOption(option, true);
                }
</script>

