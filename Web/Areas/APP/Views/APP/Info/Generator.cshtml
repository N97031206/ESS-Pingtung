<div class="row">
    <div class="col text-center" id="mainGenerator" style="width: 320px;height:300px;vertical-align:middle">
    </div>
</div>

<script type="text/javascript">

    var dom = document.getElementById("mainGenerator");
                var GeneratorChart = echarts.init(dom);
                //時間兩位
                function paddingLeft(str, lenght) {
                    if (str.length >= lenght)
                        return str;
                    else
                        return paddingLeft("0" + str, lenght);
                }

                //X軸座標
                var xData = [];
                for (var i = 0; i < 24; i++) {
                    xData.push(paddingLeft(i.toString(), 2) + "時" );
                }
                //Y軸座標
                var Generator1 = [];
                Generator1.push(@ViewBag.Generator  );
                option = null;
                option = {
                    title: {
                        text: '發電瓦數',
                        textStyle: {
                            fontWeight: 'small',
                            color: 'block'
                        },
                        x: "left"
                    },
                    tooltip: {
                        trigger: 'axis',
                        show: true
                    },
                    grid: {
                        left: '2%',
                        right: '4%',
                        bottom: '1%',
                        containLabel: true
                    },
                    xAxis: [
                        {
                            name: '時間',
                            type: 'category',
                            boundaryGap: false,
                            data: xData,
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        },
                    ],
                    yAxis: [
                        {
                            name: '度',
                            type: 'value',
                            axisLine: {
                                lineStyle: {
                                    color: 'gray',
                                    width: 2
                                }
                            },
                            axisLabel: {
                                formatter: '{value}'
                            }
                        }
                    ],
                    series: [
                        {
                            "name": "發電機",
                            "type": "line",
                            "data": Generator1,
                            stack: '累加'
                        },
                    ]
                };
                if (option && typeof option === "object") {
                    GeneratorChart.setOption(option, true);
                }
</script>


